            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetName\": \"Coffee Shop\",\n  \"targetLat\": 40.7589,\n  \"targetLng\": -73.9851,\n  \"deviceId\": \"{{deviceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tts/navigation/start",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tts", "navigation", "start"]
            },
            "description": "Start audio navigation guidance"
