            "url": {
              "raw": "{{baseUrl}}/api/tts/phrase",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tts", "phrase"]
            },
            "description": "Play pre-generated common phrases"
          }
        },
        {
          "name": "Start Navigation Audio",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
