            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Welcome to WaypointCompass! Your navigation system is ready.\",\n  \"deviceId\": \"{{deviceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tts/speak",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tts", "speak"]
            },
            "description": "Convert text to speech and announce"
          }
        },
        {
          "name": "Play Common Phrase",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
