    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://waypointcompass-production.up.railway.app",
      "type": "string"
    },
    {
      "key": "deviceId",
      "value": "DEMO_ESP32_001",
      "type": "string"
