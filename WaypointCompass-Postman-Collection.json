            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"{{deviceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tts/navigation/stop",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tts", "navigation", "stop"]
            },
            "description": "Stop navigation audio announcements"
          }
        }
      ]
    },
